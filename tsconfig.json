{
  "compileOnSave": false,
  "compilerOptions": {
    "importHelpers": true,
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "baseUrl": "src",
    "paths": {
      "@services/*": [
        "app/services/*"
      ],
      "@shared/*": [
        "app/modules/shared/*"
      ],
      "@enum/*": [
        "app/enum/*"
      ],
      "@guard/*": [
        "app/guard/*"
      ],
      "@modules/*": [
        "app/modules/*"
      ]
    },
    "module": "es2015"
  }
}